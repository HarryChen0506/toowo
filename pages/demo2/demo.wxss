/* pages/demo/demo.wxss */
.demo {
  width: 100%;
  text-align:center;
}
.demo map {
  width: 100%;
  height: 500rpx;
}
.demo .scroll-view {
  white-space: nowrap; 
  display: flex;
  height: 100px;
}
.demo .scroll-view-item{
   display: inline-block;
   width: 200px;
   height: 100px;
}
.bc_green {
  background: green
}
.bc_red {
  background: red
}
.bc_yellow {
  background: yellow
}
.bc_blue {
  background: blue
}
.demo .slide-image{
  width: 100%;
  height: 150px;
}

.demo .move-wrap {
  position: relative;
  width:100%; 
  height: 300px;
  border: 1px solid #000;
  box-sizing:border-box;
}
.demo .move-box {  
  position: absolute;
  left: 0;
  top: 0;
  width:100px; 
  height:100px; 
  background:pink;
  /* transform: translate(50px,50px) */
}