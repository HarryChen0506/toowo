/* pages/tetris/tetris.wxss */
page{
  height: 100%
}
.tetris {
  height: 100%;
  width:100%;
  background: #fff;
}
.main {
  position: relative;
  padding: 20rpx 40rpx;
}
.main-middle {
 display: flex;
}
.main-left {
  position: absolute;
  left: 50rpx;
  top: 130rpx;
}
.main-right {
  position: absolute;
  right: 50rpx;
  top: 180rpx;
}

.control-left {
  position: absolute;
  left: 80rpx;
  bottom: 20rpx;
}
.control-right {
  position: absolute;
  right: 80rpx;
  bottom: 20rpx;
}

.score {
  font-size: 50rpx;
  margin-bottom: 50rpx;
}
.score.score-history {
  color: rgb(92,190,229)
}
.score.score-now {
  color: rgb(253,199,57)
}
.score .num{
  margin-left: 20rpx;
  font-size: 34rpx;
}

.main .game {
    margin: 0 auto;
    /* width: 290rpx;  */
    /* min-height: 600rpx;  */
    border: 1rpx solid #efefef;
}
.box-row {  
   font-size: 0rpx; 
}
.box-col {
  display: inline-block;
}
.box {
  display: inline-block;
  box-sizing: border-box;
  width: 30rpx;
  height: 30rpx;
  background: rgb(235,235,235);
  border: 1px solid #fff;
  border-radius: 6rpx;
}
.box.box-next {    
    background: rgb(153,218,87);    
}
.box.box-dead {
    border: 1px solid #ddd;
    background: rgb(228,108,130);
}
.main .next {
  width: 120rpx;
  height: 120rpx;
  border: 1rpx solid #efefef;
}
.main .score {
  margin-top: 20rpx
}
.operate {
  margin-top: 100rpx;
  padding: 20rpx 70rpx;
  display: flex;
}
.operate .control {
  width: 60%;
}
.operate .direction {
  position: relative;
  width: 300rpx;
  height: 300rpx;
  /* background: blue; */
}

.dir-container {
   position: absolute;
}
.dir-container.up{
  top: 0rpx;
  left: 100rpx;
}
.dir-container.right{
  top: 100rpx;
  left: 200rpx;
}
.dir-container.down{
  top: 200rpx;
  left: 100rpx;
}
.dir-container.left{
   top: 100rpx;
   left: 0rpx;
}



.dir-button { 
  position: relative;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  background: rgb(212,63,58);
  box-shadow: 5rpx 5rpx 0rpx rgba(173,52,48,1), 5rpx 5rpx 25rpx rgba(0,0,0,.7); 
  text-align: center;
  transition: all linear 0.05s;
}
.dir-button.active {
  top: 10rpx;
  box-shadow: 5rpx 0rpx 0rpx rgba(173,52,48,1), 5rpx 0rpx 25rpx rgba(0,0,0,.7);
}

.dir-icon {  
  line-height: 100rpx;
  font-size: 50rpx;
  color: #fff;
}
.control-down {
  margin-top: 120rpx;
  margin-left: 20rpx;
}
.control-button {
  width: 250rpx;
  height: 100rpx;
  text-align: center; 
}
.control-button.fall {
  position: relative;
  margin-top: 100rpx;
  text-align: center;
  border-radius: 100rpx;
  background: rgb(95,188,227);
  box-shadow: 5rpx 5rpx 0rpx rgba(86,176,214,1), 5rpx 5rpx 15rpx rgba(0,0,0,.7); 
  color: #fff;
  transition: all linear 0.05s;
}
.control-button.fall.active {
  top: 10rpx;
  box-shadow: 5rpx 0rpx 0rpx rgba(86,176,214,1), 5rpx 0rpx 15rpx rgba(0,0,0,.7);
}
.control-button.set {
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  background: rgb(237,149,75);
  box-shadow: 3rpx 3rpx 0rpx rgba(218,137,69,1), 3rpx 3rpx 10rpx rgba(0,0,0,.7);
  border-radius: 100rpx;
  color: #fff;
  font-size: 30rpx; 
  line-height: 80rpx;
}
