<!--pages/tetris/tetris.wxml-->
<view class="tetris">  
  <view class="main">
    <view class="main-left">
      <view class="game"></view>
    </view>
    <view class="main-right">
      <view class="next"></view>
      <view class="score">
        <text>得分</text>
        <view>35</view>
      </view>
    </view>
  </view>
  <view class="operate">
    <view class="control">
      <view class="control-up">
        <view class="control-button set"><text>暂停</text></view>
      </view>
      <view class="control-down">
        <view class="control-button fall"><text class="dir-icon fall">fall</text></view>
      </view>
    </view>
    <view class="direction">
      <view class="dir-button up"><text class="dir-icon up">></text></view>
      <view class="dir-button right"><text class="dir-icon right">></text></view>
      <view class="dir-button down"><text class="dir-icon down">></text></view>
      <view class="dir-button left"><text class="dir-icon left">></text></view>
    </view>
  </view>
</view> 